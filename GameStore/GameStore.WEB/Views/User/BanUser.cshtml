@model BanUserViewModel
@{
    ViewData["Title"] = "Ban User";
}

<h2>Ban User</h2>

<h4>Choose duration</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="BanUserConfirm">
            <div class="form-group">
                <label asp-for="Durations" class="control-label"></label>
                <div>
                    <select name="Duration" asp-items="Model.Durations"></select>
                </div>
                <div>
                    <input asp-for="UserId" type="hidden" value="@Model.UserId"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ban user" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>
