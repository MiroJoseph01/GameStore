<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameStroe.Mobile.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">


            <Image Source="game.png"/>
            <Label Text="Description:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding Description}" FontSize="Medium"/>
            <Label Text="Price:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding Price}" FontSize="Medium"/>
            <Label Text="Publisher: " FontSize="Large" TextColor="DarkCyan"/>
            <Button Text="{Binding PublisherName}" BackgroundColor="DarkCyan" 
                Clicked="OnPublisherButtonClick"/>
            <Label Text="Platforms:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding Platforms}" FontSize="Medium"/>
            <Label Text="Genres:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding Genres}" FontSize="Medium"/>
            <Label Text="Discount:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding UnitsInStock}" FontSize="Medium"/>
            <Label Text="Date:" FontSize="Large" TextColor="DarkCyan"/>
            <Label Text="{Binding Date}" FontSize="Medium"/>
        </StackLayout>  
    </ScrollView>
</ContentPage>